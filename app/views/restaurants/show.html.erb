<h1> <%= @restaurant.name %> </h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<div class='mt-4'>
  <h2>Reviews</h2>
  <% @restaurant.reviews.each do |review| %>
    <div class='card mt-2'>
      <div class='card-body'>
        <p><%= review.content %></p>
        <p><%= review.rating %></p>
      </div>
    </div>
  <% end %>

  <%= link_to 'Create review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary mt-4' %>
</div>
